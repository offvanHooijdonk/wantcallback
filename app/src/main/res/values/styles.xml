<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/AppBaseTheme.ActionBar</item>

        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_accent</item>
    </style>

    <style name="AppBaseTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/app_primary</item>
    </style>

    <style name="AppBaseTheme.ToolbarTextExpanded" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/toolbar_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppBaseTheme.ToolbarTextCollapsed" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/toolbar_text</item>
    </style>

    <style name="AppBaseTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarStyle">@style/AppBaseTheme.ActionBar</item>

        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_accent</item>
    </style>

</resources>
