<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AppBaseTheme.ActionBar</item>
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_accent</item>

        <item name="android:colorButtonNormal">@color/app_accent</item>
        <item name="android:buttonStyle">@style/AppBaseTheme.RaisedButton</item>
    </style>

    <style name="AppBaseTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/app_primary</item>
    </style>

    <style name="AppBaseTheme.RaisedButton" parent="android:Widget.Material.Light.Button">
        <item name="android:textColor">@color/button_raised_text</item>
    </style>

    <style name="AppBaseTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_accent</item>

        <item name="android:colorButtonNormal">@color/app_accent</item>
        <item name="android:buttonStyle">@style/AppBaseTheme.RaisedButton</item>
    </style>

</resources>