<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/photoInToolbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/contact_photo"
        android:scaleType="center"
        android:src="@drawable/ic_person_white_188dp"
        app:layout_collapseMode="parallax"/>

    <View
        android:id="@+id/photo_touch_intercept_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selectable_white"/>

</FrameLayout>