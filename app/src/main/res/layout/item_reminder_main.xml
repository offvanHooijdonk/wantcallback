<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+375447897897 56 123 7 46 8 36 2 6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textTime"
        android:layout_toStartOf="@+id/textTime"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textTypeAndWhen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPhoneNumber"
        android:text="Missed at 00:00"
        android:textColor="@color/text_comment"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/dividerCall"
        android:layout_toStartOf="@+id/dividerCall"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:text="00:00"
        android:textSize="18sp"/>

    <View
        android:id="@+id/dividerCall"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/icon_divider_margin"
        android:layout_marginEnd="@dimen/icon_divider_margin"
        android:layout_toLeftOf="@+id/imageCall"
        android:layout_toStartOf="@+id/imageCall"
        android:background="@color/text_comment"/>

    <ImageView
        android:id="@+id/imageCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/icon_divider_margin"
        android:layout_marginEnd="@dimen/icon_divider_margin"
        android:layout_toLeftOf="@+id/dividerRemove"
        android:layout_toStartOf="@+id/dividerRemove"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_call_start_blue"
        android:background="?android:selectableItemBackground"/>

    <View
        android:id="@+id/dividerRemove"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/icon_divider_margin"
        android:layout_marginEnd="@dimen/icon_divider_margin"
        android:layout_toLeftOf="@+id/imageForget"
        android:layout_toStartOf="@+id/imageForget"
        android:background="@color/text_comment"/>

    <ImageView
        android:id="@+id/imageForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_forget"
        android:contentDescription="@string/forget"
        android:background="?android:selectableItemBackground"/>
</RelativeLayout>