<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add an alarm"
        android:textSize="18sp" />

    <!--
         <EditText 
        android:id="@+id/etPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textSize="14sp"
        android:inputType="phone"
        android:hint="Phone number"/>
        
    -->

    <AutoCompleteTextView
        android:id="@+id/inputPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:completionThreshold="3"
        android:hint="Phone number" />

    <TextView 
        android:id="@+id/textHasReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/inputPhone"
        android:text="@string/has_reminder"
        android:textSize="16sp"
        android:textColor="@android:color/holo_green_dark"/>
    
    <RelativeLayout
        android:id="@+id/blockContactInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textHasReminder" >

        <ImageView
            android:id="@+id/photo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_contact_picture" />

        <TextView
            android:id="@+id/textContactName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/photo" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/blockReminderOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blockContactInfo" >

        <TextView
            android:id="@+id/textTime"
            style="?android:attr/spinnerStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/textTime"
            android:layout_marginLeft="12dp"
            android:text="@string/today"
            android:textSize="16sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blockReminderOptions"
        android:text="Remind" />

</RelativeLayout>