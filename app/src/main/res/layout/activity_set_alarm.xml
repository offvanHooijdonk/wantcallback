<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/blockForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/blockPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin">

                    <TextView
                        android:id="@+id/textHaveReminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/block_margin_small"
                        android:layout_marginStart="@dimen/block_margin_small"
                        android:text="@string/have_reminder"
                        android:textColor="@color/text_info"
                        android:textSize="16sp"/>

                    <EditText
                        android:id="@+id/inputPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textHaveReminder"
                        android:layout_marginEnd="@dimen/block_margin_small"
                        android:layout_marginRight="@dimen/block_margin_small"
                        android:hint="@string/text_phone_number"
                        android:inputType="phone"
                        android:maxLength="18"
                        android:maxLines="1"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/blockReminderOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/blockPhoneNumber"
                    android:layout_marginTop="32dp">

                    <TextView
                        android:id="@+id/textTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="?android:selectableItemBackground"
                        android:padding="@dimen/icon_button_padding"
                        android:text="00:00"
                        android:textSize="36sp"/>

                    <TextView
                        android:id="@+id/textToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textTime"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/item_vertical_margin"
                        android:text="@string/today"
                        android:textSize="16sp"/>
                </RelativeLayout>

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:fitsSystemWindows="true">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="@color/app_primary"
                android:fitsSystemWindows="true"
                app:expandedTitleTextAppearance="@style/AppBaseTheme.ToolbarTextExpanded"
                app:collapsedTitleTextAppearance="@style/AppBaseTheme.ToolbarTextCollapsed">

                <ImageView
                    android:id="@+id/photoInToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:contentDescription="@string/contact_photo"
                    android:scaleType="center"
                    android:src="@drawable/ic_person_white_188dp"
                    app:layout_collapseMode="parallax"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                    android:layout_height="?attr/actionBarSize"/>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
    </android.support.design.widget.CoordinatorLayout>

    <ImageView
        android:id="@+id/viewAppDisabledOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="8dp"
        android:alpha="0.6"
        android:background="@android:color/white"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/ic_alarm_off_180dp"
        android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonPickUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="@dimen/fab_margin_min"
        android:layout_marginRight="@dimen/fab_margin_min"
        android:src="@drawable/ic_person_white_24dp"
        app:fabSize="normal"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin_min"
        android:src="@drawable/ic_done_white_24dp"
        app:backgroundTint="@color/fab_green"
        app:fabSize="normal"/>

</FrameLayout>